<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="13dp">
        <ImageView
                android:id="@+id/good_img_icon"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:background="@drawable/icon_logo_image_default"/>

        <TextView
                android:id="@+id/good_text_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#444444"
                android:textSize="14sp"
                android:text="热门小吃"
                android:layout_below="@+id/good_img_icon"/>

        <LinearLayout
                android:id="@+id/goodsInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/good_img_icon"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                        android:id="@+id/good_text_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="矿泉水"
                        android:textStyle="bold"
                        android:textColor="@color/color_333"
                        android:textSize="14sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/good_text_des"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:maxLines="2"
                    android:text="来自长白山的深层岩水"
                    android:textColor="@color/color_999"
                    android:textSize="10sp"/>
            <TextView
                    android:id="@+id/good_text_sell"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:textColor="#444444"
                    android:textSize="12sp"
                    android:text="月销12份"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/goodsInfo"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@id/good_img_icon"
                android:gravity="center_vertical"
                android:orientation="horizontal">
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/good_text_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥10.00"
                        android:textColor="#ff0000"
                        android:textSize="17sp"
                        android:textStyle="bold"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">
                <ImageView
                        android:visibility="invisible"
                        android:id="@+id/good_img_delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_goods_button_delete"/>
                <TextView
                        android:visibility="invisible"
                        android:id="@+id/good_text_num"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:text="0"
                        android:textSize="20sp"/>
                <ImageView
                        android:id="@+id/good_img_add"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_goods_button_add"/>
            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>