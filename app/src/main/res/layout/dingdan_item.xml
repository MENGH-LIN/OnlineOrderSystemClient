<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_margin="10dp"
              android:padding="10dp"
              android:layout_width="match_parent"
              android:background="@color/littledark"
              android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <ImageView android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:id="@+id/dingdan_img_icon"
                   android:src="@drawable/sjlogo"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单编号"
                    android:textSize="15sp"
                    android:textColor="@color/color_666"
                    android:id="@+id/dingdan_text_number"/>
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="订单时间"
                    android:textSize="10sp"
                    android:textColor="@color/color_999"
                    android:id="@+id/dingdan_text_time"/>
        </LinearLayout>
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="订单状态"
                  android:textSize="15sp"
                  android:gravity="right"
                  android:textColor="@color/color_666"
                  android:id="@+id/dingdan_text_status"/>
    </LinearLayout>
    <LinearLayout android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:paddingTop="20sp"
                  android:orientation="horizontal">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="match_parent"
                  android:text="订单内容"
                  android:id="@+id/dingdan_text_des"
                  android:textSize="20sp"
                  android:paddingLeft="40dp"
        />
        <TextView android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:text="订单价格"
                  android:id="@+id/dingdan_text_totalPrice"
                  android:textColor="#ff0000"
                  android:gravity="right"
                  android:textSize="20sp"/>
    </LinearLayout>
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/dingdan_btn_xiangqing"
            android:text="查看详情"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:layout_gravity="right"
            android:layout_marginTop="20dp"
            android:background="@color/maincolor"/>

</LinearLayout>